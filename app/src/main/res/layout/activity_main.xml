<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yinkai_pw"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_text"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp"
                android:text="输入："
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#F44336"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/textview_border"
                android:hint="  input here" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_hash"
                    android:layout_height="47dp"
                    android:testSize="46sp"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:text="HASH: "
                    android:textColor="#F44336"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/hashvalue"
                    android:layout_height="46dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/textview_border"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btnHash"
                    android:text="复制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="getHashCode" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_md5"
                    android:layout_height="47dp"
                    android:testSize="46sp"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:text="MD5: "
                    android:textColor="#F44336"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/md5value"
                    android:layout_height="46dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btnMd5"
                    android:text="复制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="getMd5Code" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_base64"
                    android:layout_height="47dp"
                    android:testSize="46sp"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:text="BASE64: "
                    android:textColor="#F44336"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/base64value"
                    android:layout_height="46dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btnBase64"
                    android:text="复制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="getBase64Code" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_aes"
                    android:layout_height="47dp"
                    android:testSize="46sp"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:text="AES: "
                    android:textColor="#F44336"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/aesvalue"
                    android:layout_height="46dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btnAesh"
                    android:text="复制"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="getAesCode" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/transform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="transformCode"
            android:layout_gravity="center"
            android:text="转换"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>